<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>lexml-toolkit-${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main</directory>
			<includes>
				<include>lib/**</include>
				<include>etc</include>
			</includes>
			<excludes>
				<exclude>lib/db2*</exclude>
				<exclude>lib/ojdbc*</exclude>
			</excludes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/doc</directory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/launcher</directory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/unpack/lexml-toolkit-common-${project.version}-jar-with-dependencies.jar</source>
			<outputDirectory>lib</outputDirectory>
		</file>
		<file>
			<source>target/unpack/oai.war</source>
			<outputDirectory>oai</outputDirectory>
		</file>
	</files>
</assembly>
