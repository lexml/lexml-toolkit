<project name="LexML Toolkit Launcher" default="run" basedir=".">

    <property name="base.dir" value="${basedir}/.."/>

    <property name="etc.dir" value="${base.dir}/etc"/>
    <property name="lib.dir" value="${base.dir}/lib"/>
    <property name="log.dir" value="${base.dir}/log"/>

    <path id="base.class.path">
        <pathelement path="${etc.dir}"/>
        <fileset dir="${lib.dir}" includes="*.jar,*.zip"/>
    </path>

    <target name="run">
        <mkdir dir="${log.dir}" />
        <launch classname="br.gov.lexml.borda.Toolkit">
            <classpath refid="base.class.path"/>
            <jvmargset>
                <jvmarg value="-Xms128M"/>
                <jvmarg value="-Xmx512M"/>
            	<jvmarg value="-Dfile.encoding=UTF-8"/>
            </jvmargset>
            <syspropertyset>
                <sysproperty key="log.dir" file="${log.dir}"/>
            </syspropertyset>
        </launch>
    </target>
    
</project>
